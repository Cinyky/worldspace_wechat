/*mallsure.wxss*/
@import "/css/DuoguanTuan/DuoguanTuan-template-default.wxss";
@import "/pages/tuan/common/infoFont.wxss";
page{font-size: 32rpx;}

.distribut-item{display: flex;background: #fff;padding: 20rpx 30rpx;justify-content: space-between;align-items: center;}
/* 自提信息 */
.ziti-msg,.express-msg{background: #fff;margin: 20rpx 0;}
.ziti-msg-item{padding:20rpx;display: flex;display: -webkit-flex;}
.ziti-msg-title{color: #888;width: 120rpx; white-space: nowrap;}
.ziti-msg-inp{flex:1;}
.ziti-msg-address{flex: 1;overflow: hidden;margin-right: 20rpx;}
.ziti-msg-shop{font-weight: bold;}
.ziti-daohang{color: var(--mColor);align-self: center;}

/* 快递信息 */
.express-item{padding:20rpx;}



/* 商品信息 */
.mall-name{background: #fff;padding: 20rpx;display: flex;display: -webkit-flex;align-items: center;}
.mall-name .iconfont{color: #888;margin-right: 10rpx;}
.mall-name-text{display: inline-block;font-weight: bold;flex: 1;overflow: hidden;}
.mall-name-text::before{right: 0;}
.mall-goods-item{padding: 30rpx;background: #fff;}
.goods-item-img{ width: 60px; height: 60px; display: block; margin-right: 8px;}
.mall-goods-title{ line-height: 140%;}

/* 其他列表 */
.sure-item{ background: #fff; padding:0 20rpx; line-height: 92rpx;}
.message-input{ height: 92rpx;}
.shop-mode{ position: relative; height: 108rpx; line-height: 108rpx; text-align: center; font-size: 40rpx; color: grey;}
.radioMe + view{ position: absolute; left: 0; top: 0; right: 0; bottom: 0; background: #fff;}
.radioMe[checked] + view{ color: var(--mColor); border-bottom:6rpx solid; font-weight: bold;}
/* 底部浮动 */
.mallcart-float{ height: 108rpx;}
.mallcart-foot{ position: fixed; z-index: 999; left: 0; bottom: 0; width: 100%; height: 108rpx; line-height: 108rpx; background: #fff;}
.mall-cart-btn{display: block; color: #fff; padding: 0 30px; border-radius: 0; height: 108rpx; line-height: 108rpx;}
.mall-cart-btn::after{border-radius: 0;border: 0;}

/* 选择弹出 */
.pssel{ position:fixed; left: 0; top: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.8); z-index: 999;}
.psselbox{ position: absolute; left: 0; width: 100%; bottom: 0; background: #fff;}
.icon-close{ width: 24px; height: 24px; border-radius: 50%; border: 1px solid #ccc; line-height: 24px; text-align: center;}
.psseltit{ padding:15px 10px; height: 56px;}
.psselitem{  padding: 10px; min-height: 44px;}
.psselicon{width: 24px; height: 24px; border-radius: 50%; border: 1px solid #ccc; line-height: 24px; text-align: center; color: rgba(0, 0, 0, 0);}
.psselicon.active{ color: #fff; border: none;}
.add-address-btn{color: #fff; border-radius: 0;text-align: center;padding:10px 0;}

