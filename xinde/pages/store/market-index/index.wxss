.hot-shop-item{width: 190rpx;display: inline-block;vertical-align: top;text-align: center;}
.hot-shop-item:not(:nth-child(4n)){margin-right: 18rpx;}
.hot-shop-logo{width: 100%;padding-bottom: 100%;position: relative;}

/* 推荐分类*/
.recommend-tit{background: #fff;padding: 16rpx 20rpx 0;font-weight: bold;}
.recommend-tit .right-more{font-size: 24rpx;color: #888;font-weight: normal;}
.recommend-goodsbox{background: #fff;padding: 20rpx;white-space: nowrap;box-sizing: border-box;}
.recommend-goods-item{width:260rpx;display: inline-block;}
.recommend-goods-item:not(:last-child){margin-right: 20rpx;}
.recommend-goods-img{width: 100%;padding-bottom: 75%;position: relative;}
.goods-popular{position: absolute;right: 10rpx;bottom: 10rpx;padding: 10rpx 20rpx;background: rgba(255, 255, 255, 0.4);border-radius: 50rpx;border-bottom-right-radius: 0;font-size: 24rpx;line-height: 1;text-overflow: ellipsis;overflow: hidden;white-space: nowrap;}
