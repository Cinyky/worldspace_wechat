/* pages/store/market-index/index.wxss */
@import "/pages/store/store-common/common.wxss";
@import "/pages/store/store-common/storetpl.wxss";


.marker-searchbox{background: #fff;padding: 10rpx 20rpx;}
.marker-location{font-size: 28rpx;align-self: center;margin-right: 20rpx;opacity: 0.8;}
.marker-location::after{content: '';display: inline-block;width: 10rpx;height: 10rpx;border-top: 1px solid #aaa;border-right: 1px solid #aaa;transform: rotate(45deg);vertical-align: middle;margin-left: 6rpx;}
.marker-location-text{display: inline-block;vertical-align: middle;margin-left: 6rpx;max-width: 200rpx;white-space: nowrap;text-overflow: ellipsis;overflow: hidden;}
.marker-search{background: rgba(0, 0, 0, 0.05);line-height: 68rpx;border-radius: 4rpx;padding: 0 30rpx;}
.marker-search-inp{height: 68rpx;font-size: 14px;}

.marker-classify-box{background: #fff;display: flex;align-items: center;color: #666;position: relative;}
.marker-classify-itembox{flex: 1;white-space: nowrap;overflow: hidden;padding-right: 20rpx;}
.marker-classify-item{padding: 0 20rpx;line-height: 92rpx;display: inline-block;vertical-align: top;}
.marker-classify-item.active{color: var(--DStore-mcolor);font-weight: bold;position: relative;}
.marker-classify-item.active::before{content: '';display: block;height: 2px;background: currentColor;position: absolute;bottom: 0;left: 30rpx;right: 30rpx;}

.marker-classify-screen{width: 100rpx;height: 92rpx;display: flex;display: -webkit-flex;align-items: center;justify-content: center;font-size: 40rpx;position: relative;}
.marker-classify-screen::before{content: '';display: block;width: 1px;height: 50%;background: #d3d3d3;transform: translateX(50%);position: absolute;left: 0;}
.marker-classify-screen.active{color: var(--DStore-mcolor);}


/* 优惠劵 */
.coupon-enter{width:690rpx;height: 110rpx;margin: 20rpx auto;display: block;}
.coupon-box{font-size: 24rpx;padding: 20rpx;background: #fff;white-space: nowrap;}
.coupon-item{background-image: linear-gradient(120deg , #fe6441, #f92307);color: #fff;display: inline-block;border-radius: 6rpx;}
.coupon-item:not(:last-child){margin-right: 20rpx;}
.coupon-info{align-items: center;line-height: 1.4;padding: 10rpx 20rpx;}
.coupon-price{margin-right: 10rpx;}
.coupon-price-num{font-size: 56rpx;}
.coupon-detail{max-width: 240rpx;}
.coupon-store-name{text-align: center;background: rgba(255, 255, 255, 0.5);}
.coupon-store-name .iconfont{font-size: 28rpx;margin-right: 10rpx;}
.coupon-news-box{background: #fff;padding: 0 20rpx;align-items: center;font-size: 28rpx;}
.coupon-news-img{width: 130rpx;height: 40rpx;margin-right: 20rpx;}
.coupon-news-itembox{height: 78rpx;line-height: 78rpx;}
.news-user-name{display: inline-block;vertical-align: bottom;color: #ed3a1c;max-width: 200rpx;white-space: nowrap;text-overflow: ellipsis;overflow: hidden;}


.marker-banner{width: 100%;height: 250rpx;}

