}

.cancleBtn {
  padding: 30rpx 0;
}

.cancleBtn:active {
  background-color: #ccc;
}

/*弹窗 看看其他活动  */

.commdityDetail_kkqt {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 630rpx;
  padding: 50rpx 20rpx;
  border-radius: 8rpx;
}

.closeBtn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #666;
  color: #666;
  transform: rotate(45deg);
}

.closeBtn:active {
  color: #fff;
  background-color: rgba(0, 0, 0, 0.6);
}

.closeBtn::before, .closeBtn::after {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  background-color: currentColor;
}

.closeBtn::before {
  width: 50%;
  height: 2rpx;
}

.closeBtn::after {
  width: 2rpx;
  height: 50%;
}

