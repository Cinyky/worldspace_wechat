}

/*弹出框  底部弹出  */

.bounce {
  animation: bounce 0.3s linear forwards;
}

/*斩获榜没有数据 */

.no-content-img {
  width: 320rpx;
  height: 320rpx;
}

@keyframes bounce {
  0% {
    transform: translateY(100%);
  }

  100% {
    transform: translateY(0%);
  }
}
