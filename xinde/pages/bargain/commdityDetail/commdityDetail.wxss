/*  弹窗  转发/生成海报  */

.commdityDetail_share {
  z-index: 1000;
}

.shareBg {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
}

.shareBg .shade_bg {
  background-color: rgba(0, 0, 0, 0.05);
}

.shareButton {
  font-size: 28rpx;
  line-height: 1;
  color: #666;
  background-color: #fff;
  padding: 72rpx 0 50rpx 0;
  border-radius: 0;
}

.shareButton::after {
  width: 0;
  height: 0;
}

.shareButton:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.shareBox .sub .subIconBox {
  font-size: 90rpx;
}

.subIconBox .icon-fenxianggeipengyou {
