/*总菜单容器*/
.menu {
 	display: block;
	height: 87rpx;
}

/*一级菜单*/
/*border-right: 1px solid #d2d2d2;*/
/*border-bottom: 1px solid #d2d2d2;*/
.menu dt {
	font-size: 15px;
	float: left;
	/*hack*/
	width: 25%;
	height: 80rpx;
	
	
	text-align: center;
	background-color: #f4f4f4;
	color: #5a5a5a;
	line-height: 80rpx;
}

.menu dt.highlight {
	
	color: red;
	border-bottom-width: 7rpx;
	border-bottom-style: solid;
	border-bottom-color: red;
}


/*二级菜单外部容器样式*/
.menu dd{
	position: absolute;
	width: 100%;
	/*hack*/
	top:180rpx;
	left:0;
	z-index:999;
}

/*二级菜单普通样式*/
.menu li{
	font-size: 14px;
	line-height: 34px;
	color: #575757;
	height: 34px;
	display: block;
	padding-left: 8px;
	background-color: #f8f8f8;
	border-bottom: 1px solid #dbdbdb;
}

/*二级菜单高亮样式*/
.menu li.highlight{
	background-color: #f4f4f4;
	color: #48C23D;
}

/* 显示与隐藏 */
.show {
	display: block;
}

.hidden {
	display: none;
}

