/*销量与好评*/
.goods-score {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	width: 400rpx;
}




.goods-score text {
	display: block;
	
	font-size: 12px;
	color: #999;
	margin: 8px 0px;
}

/*整体列表*/
.carts-list {
	display: flex;
	flex-direction: column;
	padding: 0 20rpx;
	margin-bottom: 80rpx;
	
}

/*每行单元格*/
.carts-item {
	display: flex;
	flex-direction: row;
	height:224rpx;
	/*width属性解决标题文字太短而缩略图偏移*/
	width:100%;
	padding: 20rpx 0;
	background: #f3f3f3;
	margin-bottom: 20rpx;
	border-width: 2rpx;
	border-style: solid;
	border-color: #e3e3e3;
}

/*左部图片*/
.carts-image {
	width:180rpx;
	height:180rpx;
	margin-left: 20rpx;
}


/*右部描述*/
.carts-text {
	margin-left: 20rpx;
	width: 480rpx;
	
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
}

/*右上部分标题*/
.carts-title {
	font-size: 30rpx;
	color: #444;
	height: 38rpx;
	line-height: 30rpx;
	display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
	
}

/*右下部分价格与数量*/
.carts-subtitle {
	
	font-size: 25rpx;
	color:darkgray;
	padding: 0 20rpx;
	display: flex;
	flex-direction: row;
	justify-content:space-between;
}

/*价格*/
.carts-price {
	color: #f60;
	font-size:29rpx;
	line-height: 22px;
	margin-top: 15rpx;
}

.view-empty{
	width: 100%;
	height: 400rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}


.view-empty text{
	font-size: 32rpx;
	color: #444;
}
