page{
    background-color: #f7f7f7;
    font-size: 14px;
    letter-spacing: 1px;
}
.rzban image{
    width: 750rpx;
    height:300rpx; 
}
.mainbox{
    padding: 32rpx;
}
.inputnox{
    background-color: #fff;
    border-radius: 6px;
    margin-bottom: 32rpx;
    position: relative;
    padding: 26rpx;
}
.inputnox text{
    display: block;
    position: absolute;
    width: 70px;
    line-height: 1.4rem;
    top: 26rpx;
    left: 26rpx;
}
.inputnox input{
    margin-left: 70px;
    height: 40rpx;
    font-size: 14px;
    line-height: 1.4rem;
    margin-right: 26rpx;
    min-height:1.4rem;
}
.inputnox textarea{
    width: 100%;
    padding-top: 60rpx;
    height: 4.2rem;
    display: block;
    line-height: 1.4rem;
    letter-spacing: 1px;
}
.placeholder{
    color: #ccc;
    font-size: 14px;
}
.zhushi{
    font-size: 12px;
    color: #ccc;
}
.xybox{
    padding: 32rpx 0;
    font-size: 12px;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.xybox text{
    color: #528ec6;
}
.xybox icon{
    margin-right: 6rpx;
}
.btn{
    padding-top: 16rpx;
}
.btn button{
    background-color: #ff0000;
    color: #fff;
    line-height: 80rpx;
    font-size: 14px;
}