/* pages/applyapply.wxss */
@import"../../wxParse/wxParse.wxss";
page{
	background-color: #fff;
	padding-top: 10px;
    font-size: 14px;
}
.inputbox{
	padding: 0 16px;
	margin-bottom: 10px;
}
.inputbox .p{
    display: block;
	line-height: 32px;
	color: #666;
}
.inputbox input{
	width: 100%;
	padding: 0 10px;
	box-sizing: border-box;
	border: 1px solid #eee;
	height: 36px;
	line-height: 36px;
	font-size: 14px;
  background-color: #fff;
}
.inputbox .pholder{
  font-size: 12px;
  color: #999;
}
.yzmbox{
	padding-top: 16px;
	position: relative;
}
.yzmbox input{
	width: 60%;
}
.yzmbox  button{
    padding: 0;
	box-sizing: border-box;
	border: none;
	height: 36px;
	line-height: 36px;
	background-color: #f3f3f3;
	outline: none;
	position: absolute;
	top: 16px;
	right: 0;
	width: 38%;
	color: #f23131;
    font-size: 14px;
    border-radius:0;
}
.lareabox,.address{
	padding-left: 80px;
	height: 36px;
	position: relative;
}
.lareabox .p{
	position: absolute;
	top: 0;
	left: 0;
	line-height: 36px;
}
.address .p{
	position: absolute;
	top: 12;
	left: 0;
	line-height: 36px;
}
.content-block .picker{
	color: #333;
	line-height: 36px;
	font-size: 14px;
    box-shadow: 0 2px 5px #f3e6d4;
    background-color: #fff;
    padding: 0 10px;
}
.content-block .picker text,.inputbox .select text{
    color: #757575;
}
.address{
	padding-top: 16px;
}
.inputbox .select{
    box-shadow: 0 2px 5px #f3e6d4;
	background-color: #fff;
	box-sizing: border-box;
	width: 100%;
	height: 36px;
	line-height: 36px;
    appearance:none;
    -webkit-appearance:none;
	background-size: 36px 36px;
    padding: 0 10px;
	outline: none;
    position: relative;
}
.inputbox .select .picker{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    padding: 0 46px 0 10px;
    z-index: 3;
    box-sizing: border-box;
}
.inputbox .select image{
    position: absolute;
    right: 0;
    top: 0;
    width: 36px;
    height: 36px;
}
.btmbox{
	padding: 16px 16px 30px 16px;
	text-align: center;
}
.btmbox text{
	color: #f23131;
}
.btmbox checkbox{
    transform: scale(0.8);
}
.btmbox button{
	display: block;
	margin-top: 10px;
	width: 100%;
	line-height: 40px;
	background-color: #f23131;
	color: #fff;
	border-radius: 20px;
	border: none;
	outline: none;
    font-size: 14px;
}
.hyxzboxzz{
	height: 100%;
	width: 100%;
	background-color: rgba(0,0,0,0.3);
	position: fixed;
	top: 0;
	left: 0;
    z-index: 9;
}
.hyxzbox{
	background-color: #fff;
	border-radius: 6px;
	width: 66%;
	padding: 16px 16px 20px 16px;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
}
.hyxzbox .title{
	text-align: center;
    font-size: 15px;
	font-weight: 600;
	margin-bottom: 10px;
}
.hyxzbox .paragraph{
	max-height: 300px;
	overflow: scroll;
}
.hyxzbox .paragraph text{
    display: block;
	line-height: 22px;
	padding-bottom: 6px;
}
::-webkit-scrollbar {
    display: none;
}
