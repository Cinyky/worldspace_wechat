@import "../common.wxss";
 @import "/css/DuoguanBargain/DuoguanBargain-template-default.wxss"; 

page{
  padding-bottom: 112rpx;
}

/*顶部商品  */

.commonBox {
  padding: 40rpx 30rpx;
  background-color: #fff;
}

/*选择配送方式  */

.dilType::before {
  right: 30rpx;
}

.dilType:active {
  background-color: rgba(0, 0, 0, 0.03);
}

.couponBox:active {
  background-color: rgba(0, 0, 0, 0.03);
}

.icon-huiyuanqiazhifu {
  font-size: 40rpx;
  color: #fea512;
}

.icon-weixinzhifu1 {
  font-size: 40rpx;
  color: #09bb07;
}

.radioBox radio{
  -webkit-transform:  translateY(-2rpx);
   transform: translateY(-4rpx);
}
.wx-radio-input-checked{
  border: none !important;
}

/*同城  */

.peiSongBox {
  padding:30rpx ;
  background-color: #fff;
}

.myaddress{
  margin-right: 30rpx;
  max-width: 60%;
}

/*自提  */

.zitiAlert {
  color: #666;
}

.qhAddr {
  width: 170rpx;
}

.addrDetail {
  width: 420rpx;
  line-height: 44rpx;
}

.posIcon {
  font-size: 50rpx;
}

.quhuoAddr:active {
  background-color: rgba(0, 0, 0, 0.03);
}

.zitiInp {
  width: 300rpx;
  font-size: 28rpx;
  text-align: right;
}

.input-placeholder {
  text-align: right;
  font-size: 28rpx;
  color: #999; 
}

.peiSongBox::before {
  right: 30rpx;
}

.zitiTime {
  padding-right: 40rpx;
}

.auhuoTime:active {
  background-color: rgba(0, 0, 0, 0.03);
}

/* 自提地址 */
.extraction-address-box{background: #fff;padding: 0 20rpx;font-size: 28rpx;}
.extraction-title{line-height: 80rpx;}
.extraction-choose{color: #f66;padding-right: 24rpx;font-size: 24rpx;}
.extraction-choose::before,.extraction-address::before{right: 0;}
.extraction-address{padding-bottom: 20rpx;padding-right: 24rpx;}
.extraction-store-name{font-weight: bold;align-items: center;}
.store-tell-btn{width: 60rpx;height: 50rpx;display: inline-flex;align-items: center;justify-content: center;margin-left: 20rpx;font-size: 40rpx;font-weight: normal;}
.extraction-store-address{color: #666;}
.address-distance{color: #999;}

/*留言  */

.textarea {
  min-height: 50rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
}

.textarea-placeholder {
  font-size: 28rpx;
  margin-left: 200rpx;
}

/*优惠券  */

.couponBox {
  padding-right: 60rpx;
}

.couponBox::before {
  right: 30rpx;
}


/*底部  */

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  line-height: 92rpx;
  background-color: #fff;
}

.payVal {
  padding-left: 30rpx;
}

.footPayBtn {
  width: 240rpx;
  color: #fff;
  margin-right: 0;
  border-radius: 0;
}


.footPayBtn::after{
  width: 0;
  height: 0;
}


/* 选择配送方式 弹窗  */

.diTypeltem {
  padding: 30rpx 50rpx 30rpx 30rpx;
}

.diTypeltem:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.mt75 {
  margin-top: 150rpx;
}




/*预约时间  弹窗*/

.dateBox {
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.pchoose {
  padding: 20rpx 0;
}

.scroBox {
  white-space: nowrap;
}

.scroItem {
  display: inline-block;
  width: 200rpx;
  padding: 30rpx 0;
  line-height: 42rpx;
}

.tPartBox {
  background: #f1f1f1;
  max-height: 400rpx;
  overflow: scroll;
}

.tPart {
  float: left;
  position: relative;
  width: 31.1333333%;
  margin: 1.1%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
}

.tab_on {
  position: relative;
}

.tab_on::after {
  content: "";
  display: block;
  transform: translateY(30rpx) scale(0.9, 0.6);
  width: 100%;
  height: 10rpx;
}

.selTime {
  color: #fff;
}

/*弹出框  底部弹出  */
.bounce {
  animation: bounce 0.3s linear forwards;
}

@keyframes bounce {
  0% {
    transform: translateY(100%);
  }

  100% {
    transform: translateY(0%);
  }
}