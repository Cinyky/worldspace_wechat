/* pages/tuiguang/tuiguang.wxss */
page{
  height: 100%;
}
.container{
  display: block;
  height: 100%;
  background-color: #c25157;
}
.userinfobox{
  position: relative;
  top: 0;
  left: 0;
  padding: 16px;
  width: 100%;
  box-sizing: border-box;
  background-color: #f2f2f2;
}
.userinfo{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60px;
}
.userinfo-avatar{
  width: 60px;
  height: 60px;
  position: absolute;
  top: 16px;
  left: 16px;
}
.userinfo-nickname{
  margin-left: 90px;
  line-height: 30px;
}
.userinfo-nickname text{
  font-size: 20px;
  color: #ff6666;
  margin-left: 6px;
}
.daiyan{
  padding: 16px 0;
  text-align: center;
  line-height: 60px;
}
.daiyan text{
  font-size: 20px;
  color: #ff6666;
  margin: 0 6px;
}
.erweimbox{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  padding: 50rpx 0;
  letter-spacing: 1px;
}
.erweimbox .erweim2{
  margin: 60rpx 0;
  width: 160px;
  height: 160px;
}
.erweimbox .erweim2 image{
  width: 100%;
  height: 100%;
}
.erweimbox .erweim3{
  font-weight: bold;
}