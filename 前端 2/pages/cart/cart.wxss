/*外部容器*/
page{
  background-color: #f7f7f7;
}
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: flex-start;
	box-sizing: border-box;
	
} 
.view-empty{
	width: 750rpx;
	height: 750rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.view-empty image{
	width: 200rpx;
	height: 200rpx;
}

.hint{
	font-size: 32rpx;
	color: #999999;
}

.btn{
	font-size: 29rpx;
	color: #fff;
	background: red;
	margin-top: 100rpx;
	border-radius: 9rpx;
	padding: 20rpx 200rpx 20rpx 200rpx;
}

/*整体列表*/
.carts-list {
	display: flex;
	flex-direction: column;
	padding: 0 20rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
	
}
/*每行单元格*/
.carts-item-title {
	display: flex;
	flex-direction: row;
	
	/*width属性解决标题文字太短而缩略图偏移*/
	width:100%;
	border-bottom: 1px solid #eee;
	padding: 18rpx 0;

	align-items: center;
	
	
}

.carts-item-title image{
  width: 52rpx;
  height: 52rpx;
}

.carts-item-title text{
  font-size: 30rpx;
  color: #000;
  margin-left: 14rpx;
}

/*每行单元格*/
.carts-item {
	display: flex;
	flex-direction: row;
	/*width属性解决标题文字太短而缩略图偏移*/
	width:100%;
	padding: 20rpx 0;
	
	justify-content: space-between;
}

/*左部图片*/
.carts-image {
	width:130rpx;
	height:150rpx;
	/*border-width: 3rpx;
	
	border-style: solid;
	border-color: #ccc;*/
}


/*右部描述*/
.carts-text {
	margin-left: 10rpx;
	width: 370rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.carts-right{
	height: 150rpx;
	width: 110rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: flex-end;
}
/*右上部分标题*/
.carts-title {
	font-size: 28rpx;
	color: #444;
	line-height: 40rpx;
	flex-shrink: 0;
	overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;

}
.carts-key-name{
	margin: 12rpx 0;
	font-size: 24rpx;
	color: #999999;
	
	
}
/*右下部分价格与数量*/
.carts-subtitle {
	font-size: 26rpx;
	color:darkgray;
	display: flex;
	flex-direction: row;
	justify-content:space-between;
}

/*价格*/
.carts-price {
	color: #f60;
	font-size:14px;
	line-height: 22px;
}

/*商品加减按钮*/
/*stepper容器*/
.stepper {
	width: 92px;
	height: 26px;
	margin:0 auto;
}


/*加号与减号*/
.stepper text {
	width: 26px;
	height:26px;
  line-height:26px;
	text-align: center;
	float: left;
  font-weight: bold;
  background-color: #f7f7f7;
}

/*数值*/
.stepper input {
	color: black;
	float: left;
	margin: 0 auto;
	width: 36px;
	height:26px;
  min-height: 26px;
	text-align: center;
	font-size: 12px;
	border-left: 2px solid #fff;
	border-right: 2px solid #fff;
  background-color: #f2f2f2;
}

/*普通样式*/
.stepper .normal{
	color: black;
}

/*禁用样式*/
.stepper .disabled{
	color: #ccc;
}

/*复选框样式*/
.carts-list icon {
	margin-top: 60rpx;
	margin-right: 20rpx;
}

/*底部按钮*/
.carts-footer {
	width: 100%;
	height: 80rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	position: fixed;
	bottom: 102rpx;
	border-top: 1px solid #eee;
	background: white;
    z-index: 99;
}

/*复选框*/
.carts-footer icon {
	margin-left: 20rpx;
	margin-top: 20rpx;
}

/*全选字样*/
.carts-footer text {
	font-size: 30rpx;
	margin-left: 8rpx;
	line-height: 10rpx;
}

/*立即结算按钮*/
.carts-footer .button {
	line-height: 80rpx;
	text-align: center;
	width:220rpx;
	height: 80rpx;
	background-color: #ff4544;
	color: white;
	font-size: 32rpx;
	border-radius: 0;
	border: 0;
}
.carts-footer-left{
	display: flex;
	flex-direction: row;
	align-items: center;
}

.carts-footer-left text{
	margin-top: 20rpx;
}


.text-price{
	font-size: 27rpx;
	color: #999999;
	background-image: url('https://wudhl.com/delete.png');
    background-size:160% 100%;
	
	text-decoration-line:line-through; 
}
.text-red{
	font-size: 27rpx;
