.option-item {
  background: #fff;
  display: block;
  position: relative;
}

.option-item.style {
  width: 25%;
  padding: 24rpx 0;
  font-size: 9pt;
}

.option-item.style .option-icon {
  margin: 0;
  margin-bottom: 12rpx;
}

.option-item .option-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 24rpx;
