/*页面背景*/
page {
	background-color: #ffffff;
  height: 100%;
}

/*容器总体布局为左右两列*/
.container {
	display: flex;
	flex-direction: row;
}

/*侧边栏顶级分类给予固定宽度*/
.sidebar {
	width: 120px;
	height: 100%;
  background-color: #f7f7f7;
}
::-webkit-scrollbar {display:none}
/*text块状布局独占一行*/
.sidebar .sidelist{
  line-height: 20px;
  height: 56px;
  padding: 8px 12rpx;
	text-align: center;
	color: #333;
	font-size: 14px;
  border-bottom: 1px dashed #eee;
  position: relative;
}
.sidebar .sidelist text{
  text-align: center;
  display: block;
  padding: 0 12rpx;
  vertical-align: middle;
  position: absolute;
  width: 100%;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);
}
/*hight light*/
.sidebar view.highlight {
	background-color: #fff;
	color: #f23131;
	border-right: 0;
}

.main {
	width: 100%;
  height: 100%;
	margin-left: 20rpx;
	display: flex;
	flex-direction: column;
}

/*category banner*/
.banner {
	width: 100%;
	height: 180rpx;
	margin: 20rpx 0;
}

/*网格布局子类九宫格分布*/
.gridview {
	background-color: #ffffff;
	height: 100%;
}

/*向左流动*/
.gridview dl {
	float: left;
	margin: 30rpx;
}

/*图片*/
.gridview dt image {
	width: 120rpx;
	height: 120rpx;
}

/*文字*/
.gridview dd text {
	color: #6c6c6c;
	font-size: 12px;
	text-align: center;
	display: block;
	line-height: 20px;
}