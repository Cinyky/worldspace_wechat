.searchLetter {
  position: fixed;
  right: 0;
  width: 52rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  color: #666;
  z-index: 1;
}

.searchLetter view {
  padding: 8rpx 0;
  color:#e95a7a;
  font-size:26rpx;
}

.touchClass {
  background-color: #f5f5f5;
  height: 100%;
}

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 52rpx;
  padding-left: 20rpx;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.item_city {
  display: flex;
  background-color: #fff;
  height: 88rpx;
  padding-left: 20rpx;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  font-size: 28rpx;
  color: #666;
}
.item_city:last-child{
    border-bottom: none;
}

.hotcity-common {
  font-size: 24px;
  color: #666;
  padding: 0 0 0 30rpx;
}

.hotcity{
    display: block;
}
.thisCity {
  padding-top: 30rpx;
}

.thisCityName {
  display: inline-block;
  border: 1rpx solid #2ab4ff;
  border-radius: 8rpx;
  padding: 10rpx;
  font-size: 24rpx;
  color: #2ab4ff;
  text-align: center;
  min-width: 140rpx;
  margin: 20rpx 0 20rpx 30rpx;
}

.thishotText {
  color: #2ab4ff;
  font-size: 20rpx;
  margin: 0 !important;
}

.slectCity {
  border-color: #2ab4ff !important;
}

.slectCity view {
  color: #2ab4ff !important;
}
.weui-grids{
    padding-left: 16rpx;
    padding: 3rpx 0 10rpx;
}
.weui-grid {
  position: relative;
  float: left;
  padding: 12rpx 0;
  width: 149.5rpx;
  box-sizing: border-box;
  border: 1rpx solid #ececec;
  border-radius: 8rpx;
  margin: 10rpx 12rpx;
}

.weui-grid__label {
  display: block;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

